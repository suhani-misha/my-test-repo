@page
@model SocialSecurity.AdminPortal.Pages_Currency.IndexModel

@{
    ViewData["Title"] = "Index";
}
 <div class="card w-100 overflow-hidden rounded-4">
              <div class="card-body position-relative p-4">
       <div class="row">
   <div class="col-md-7">
     <h4>Currency</h4>
   </div>
 
  <div class="col-md-5">
      <div class="d-flex justify-content-end align-items-center mb-4">
           <input placeholder="Type here to search" type="text" class="form-control w-50 me-4">
           <a asp-page="Create" class="btn btn-grd-primary"><i class="bi bi-plus-lg"></i> Create New</a>
     <div>
 </div>
  </div>
 </div>
   </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].ExchangeRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency[0].ModifiedBy)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Currency) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExchangeRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary gap-2 btn-sm"><i class="bi bi-eye"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger gap-2 btn-sm"><i class="bi bi-trash3"></i></a>
                 <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-success gap-2 btn-sm"><i class="bi bi-pencil"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
